@using University.ApplicationCore.Entities

@model IEnumerable<Group>

@{
    ViewData["Title"] = "Groups";
}

<h2>Groups</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Students)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var group in Model)
        {
            <tr>
                <td>
                   @Html.DisplayFor(modelItem => group.Id)
                </td>
                <td>
                   @Html.DisplayFor(modelItem => group.Name)
                </td>
                <td>
                   @Html.DisplayFor(modelItem => group.Course.Name)
                </td>
                <td>
                   @Html.DisplayFor(modelItem => group.Students.Count)

                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@group.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@group.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@group.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>